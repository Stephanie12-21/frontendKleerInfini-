generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////pour l'administrateur//////////////////////
model admin {
  id            Int            @id @default(autoincrement())
  name          String
  phone         String         @unique
  email         String         @unique
  hashPassword  String
  profileImages profileImage[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model profileImage {
  id      Int    @id @default(autoincrement())
  path    String
  adminId Int
  admin   admin  @relation(fields: [adminId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

/////////pour le newsletter//////////////////////
model newsletter {
  id    Int    @id @default(autoincrement())
  email String @unique
}

////////pour la requÃªte de service////////////////
model requeteService {
  id                 Int     @id @default(autoincrement())
  nom                String
  email              String
  telephone          String
  details            String
  reseauSecurite     Boolean @default(false)
  cloudComputing     Boolean @default(false)
  devOps             Boolean @default(false)
  developpementWeb   Boolean @default(false)
  solutionsDigitales Boolean @default(false)
}

///////pour le blog//////////////////////
model article {
  id               Int      @id @default(autoincrement())
  titre            String
  contenu          String
  categorieArticle String
  images           image[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model image {
  id        Int     @id @default(autoincrement())
  path      String
  articleId Int
  article   article @relation(fields: [articleId], references: [id])
}
